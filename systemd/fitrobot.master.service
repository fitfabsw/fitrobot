[Unit]
Description=This is the master service
# StartLimitIntervalSec=360
# StartLimitBurst=3
Requires=fitrobot.bringup.service
After=fitrobot.bringup.service

[Service]
User=pi
WorkingDirectory=/home/pi/ros2_ws
ExecStart=/bin/bash -c "source /opt/ros/galactic/setup.bash && source /home/pi/ros2_ws/install/setup.bash && ros2 run fitrobot master_service"
# Restart=on-failure
# RestartSec=120s

[Install]
WantedBy=multi-user.target
